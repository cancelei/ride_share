#!/bin/bash -e

# Enable jemalloc for reduced memory usage and latency.
if [ -z "${LD_PRELOAD+x}" ]; then
    LD_PRELOAD=$(find /usr/lib -name libjemalloc.so.2 -print -quit)
    export LD_PRELOAD
fi

# Ensure SolidQueue tables are set up before starting any process
if [ "$RAILS_ENV" == "production" ] || [ "$RAILS_ENV" == "staging" ]; then
    echo "Setting up SolidQueue migrations..."
    # Install SolidQueue migrations
    bin/rails solid_queue:install
    
    # Create the queue_migrate directory if it doesn't exist
    mkdir -p db/queue_migrate
    
    # Copy the SolidQueue migrations to the queue_migrate directory
    echo "Copying SolidQueue migrations to queue_migrate directory..."
    for migration in $(find db/migrate -name '*solid_queue*')
    do
        filename=$(basename $migration)
        cp $migration db/queue_migrate/$filename
    done
    
    # Run migrations for the queue database specifically
    echo "Running SolidQueue migrations in the queue database..."
    bin/rails db:migrate:up RAILS_ENV=$RAILS_ENV DATABASE=queue VERSION=20240717000000 || true
    bin/rails db:migrate RAILS_ENV=$RAILS_ENV DATABASE=queue
    echo "SolidQueue setup complete."
fi

# If running the rails server directly (not through Foreman)
if [ "${@: -2:1}" == "./bin/rails" ] && [ "${@: -1:1}" == "server" ]; then
    ./bin/rails db:prepare
    
    # Start the Rails server in the background
    "${@}" &
    
    # Start the solid_queue worker using rails command
    ./bin/rails solid_queue:start &
    
    # Wait for any process to exit
    wait -n
    
    # Exit with status of process that exited first
    exit $?
fi

# If starting with Foreman, ensure database is prepared
if [ "${@: -1:1}" == "foreman" ]; then
    echo "Preparing database before starting Foreman..."
    ./bin/rails db:prepare
fi

exec "${@}"
