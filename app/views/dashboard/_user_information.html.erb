  <div class="lg:col-span-1">
    <%# Main Profile Card %>
    <div class="bg-white rounded-lg shadow p-4 sm:p-6 lg:p-8 mb-6">
      <%# Profile Header %>
      <div class="flex flex-col sm:flex-row items-center sm:items-start space-y-4 sm:space-y-0 sm:space-x-6 mb-6">
        <%# Avatar %>
        <div class="w-20 h-20 sm:w-24 sm:h-24 lg:w-28 lg:h-28 rounded-full bg-blue-100 flex-shrink-0 flex items-center justify-center overflow-hidden">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 sm:h-14 sm:w-14 lg:h-16 lg:w-16 text-blue-500" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
          </svg>
        </div>

        <%# Name and Rating %>
        <div class="text-center sm:text-left flex-grow">
          <h2 class="text-xl sm:text-2xl lg:text-3xl font-semibold"><%= current_user.full_name %></h2>
          <div class="flex items-center justify-center sm:justify-start mt-2">
            <div class="flex space-x-1">
              <% 5.times do |i| %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 sm:h-6 sm:w-6 <%= i < 4 ? 'text-yellow-400' : 'text-gray-300' %>" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              <% end %>
            </div>
            <span class="ml-2 text-sm text-gray-600">(4.0)</span>
          </div>
        </div>
      </div>

      <%# Role Icons %>
      <div class="grid grid-cols-2 gap-4 mb-6">
        <%= button_to toggle_role_path(role: 'passenger'),
            method: :patch,
            class: "flex flex-col items-center p-4 rounded-lg border #{current_user.role == 'passenger' ? 'border-blue-500 bg-blue-50' : 'border-gray-200'} transition-all hover:border-blue-300 hover:shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50" do %>
          <svg xmlns="http://www.w3.org/2000/svg" 
               class="h-8 w-8 #{current_user.role == 'passenger' ? 'text-blue-600' : 'text-blue-500'} mb-2" 
               fill="none" 
               viewBox="0 0 24 24" 
               stroke="currentColor">
            <path stroke-linecap="round" 
                  stroke-linejoin="round" 
                  stroke-width="2" 
                  d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
          <span class="text-gray-600 text-sm font-medium">Passenger Mode</span>
          <% if current_user.role == 'passenger' %>
            <span class="mt-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
              Active
            </span>
          <% end %>
        <% end %>

        <%= button_to toggle_role_path(role: 'driver'),
            method: :patch,
            class: "flex flex-col items-center p-4 rounded-lg border #{current_user.role == 'driver' ? 'border-blue-500 bg-blue-50' : 'border-gray-200'} transition-all hover:border-blue-300 hover:shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50" do %>
          <svg xmlns="http://www.w3.org/2000/svg" 
               class="h-8 w-8 #{current_user.role == 'driver' ? 'text-blue-600' : 'text-blue-500'} mb-2" 
               fill="none" 
               viewBox="0 0 24 24" 
               stroke="currentColor">
            <path stroke-linecap="round" 
                  stroke-linejoin="round" 
                  stroke-width="2" 
                  d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            <path stroke-linecap="round" 
                  stroke-linejoin="round" 
                  stroke-width="2" 
                  d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          <span class="text-gray-600 text-sm font-medium">Driver Mode</span>
          <% if current_user.role == 'driver' %>
            <span class="mt-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
              Active
            </span>
          <% end %>
        <% end %>
      </div>

      <%# Contact Information %>
      <div class="space-y-4 mb-6">
        <div class="flex items-center p-3 rounded-lg bg-gray-50 hover:bg-gray-100 transition-colors">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 sm:h-6 sm:w-6 text-gray-500 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
          <p class="text-sm sm:text-base text-gray-700 font-medium"><%= current_user.email %></p>
        </div>

        <% if current_user.role == "passenger" && current_user.passenger_profile %>
          <div class="flex items-center p-3 rounded-lg bg-gray-50 hover:bg-gray-100 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 sm:h-6 sm:w-6 text-gray-500 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            <p class="text-sm sm:text-base text-gray-700 font-medium"><%= current_user.passenger_profile.whatsapp_number || '+50678756787' %></p>
          </div>
          <div class="flex items-center p-3 rounded-lg bg-gray-50 hover:bg-gray-100 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 sm:h-6 sm:w-6 text-gray-500 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />
            </svg>
            <p class="text-sm sm:text-base text-gray-700 font-medium"><%= current_user.passenger_profile.telegram_username || 'lowkey' %></p>
          </div>
        <% elsif current_user.role == "driver" && current_user.driver_profile %>
          <div class="flex items-center p-3 rounded-lg bg-gray-50 hover:bg-gray-100 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 sm:h-6 sm:w-6 text-gray-500 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V8a2 2 0 00-2-2h-5m-4 0V5a2 2 0 114 0v1m-4 0a2 2 0 104 0m-5 8a2 2 0 100-4 2 2 0 000 4zm0 0c1.306 0 2.417.835 2.83 2M9 14a3.001 3.001 0 00-2.83 2M15 11h3m-3 4h2" />
            </svg>
            <p class="text-sm sm:text-base text-gray-700 font-medium"><%= current_user.driver_profile.license %></p>
          </div>
          <div class="flex items-center p-3 rounded-lg bg-gray-50 hover:bg-gray-100 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 sm:h-6 sm:w-6 text-gray-500 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
            <p class="text-sm sm:text-base text-gray-700 font-medium"><%= current_user.driver_profile.license_issuer %></p>
          </div>
        <% end %>
      </div>

      <%# Profile Actions %>
      <div class="flex flex-col sm:flex-row sm:space-x-4 space-y-3 sm:space-y-0 px-4 sm:px-0">
        <% if current_user.role == "passenger" %>
          <% if current_user.passenger_profile %>
            <%= link_to edit_passenger_profile_path(current_user.passenger_profile),
                class: "flex-1 py-3 px-6 text-blue-600 text-center text-sm font-medium hover:bg-blue-50 rounded-lg transition-colors duration-150 border border-blue-200" do %>
              <span class="flex items-center justify-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"/>
                </svg>
                Edit Profile
              </span>
            <% end %>
          <% else %>
            <%= link_to new_passenger_profile_path,
                class: "flex-1 py-3 px-6 text-blue-600 text-center text-sm font-medium hover:bg-blue-50 rounded-lg transition-colors duration-150 border border-blue-200" do %>
              <span class="flex items-center justify-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd"/>
                </svg>
                Create Profile
              </span>
            <% end %>
          <% end %>
        <% elsif current_user.role == "driver" %>
          <% if current_user.driver_profile %>
            <%= link_to edit_driver_profile_path(current_user.driver_profile),
                class: "flex-1 py-3 px-6 text-blue-600 text-center text-sm font-medium hover:bg-blue-50 rounded-lg transition-colors duration-150 border border-blue-200" do %>
              <span class="flex items-center justify-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"/>
                </svg>
                Edit Driver Profile
              </span>
            <% end %>
          <% else %>
            <%= link_to new_driver_profile_path,
                class: "flex-1 py-3 px-6 text-blue-600 text-center text-sm font-medium hover:bg-blue-50 rounded-lg transition-colors duration-150 border border-blue-200" do %>
              <span class="flex items-center justify-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd"/>
                </svg>
                Create Driver Profile
              </span>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>