<div id="ride-statistics" class="bg-white rounded-lg shadow p-6">
  <div class="flex justify-between items-center mb-4">
    <h2 class="text-xl font-semibold">Ride Statistics</h2>
    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-blue-500" viewBox="0 0 20 20" fill="currentColor">
      <path d="M2 11a1 1 0 011-1h2a1 1 0 011 1v5a1 1 0 01-1 1H3a1 1 0 01-1-1v-5zM8 7a1 1 0 011-1h2a1 1 0 011 1v9a1 1 0 01-1 1H9a1 1 0 01-1-1V7zM14 4a1 1 0 011-1h2a1 1 0 011 1v12a1 1 0 01-1 1h-2a1 1 0 01-1-1V4z" />
    </svg>
  </div>

  <% if defined?(@active_rides) && defined?(@completed_rides) && defined?(@cancelled_rides) %>
    <div>
      <div class="flex justify-between items-center mb-2">
        <span>Active</span>
        <span class="text-blue-600 font-semibold"><%= @active_rides&.count || 0 %></span>
      </div>
      <div class="flex justify-between items-center mb-2">
        <span>Completed</span>
        <span class="text-green-600 font-semibold"><%= @completed_rides&.count || 0 %></span>
      </div>
      <div class="flex justify-between items-center">
        <span>Cancelled</span>
        <span class="text-red-600 font-semibold"><%= @cancelled_rides&.count || 0 %></span>
      </div>
    </div>
  <% else %>
    <p class="text-gray-500">No ride data available</p>
  <% end %>
</div> 