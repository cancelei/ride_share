<div id="ride_statistics_card" class="bg-white rounded-lg shadow p-4">
  <div class="flex items-center justify-between mb-4">
    <h3 class="text-gray-700 font-medium">Ride Statistics</h3>
    <span class="p-2 bg-green-50 rounded-md">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
      </svg>
    </span>
  </div>
  <div class="flex flex-col">
    <div class="mb-2">
      <span class="text-sm text-gray-500">Active</span>
      <p class="text-xl font-semibold text-gray-800"><%= @active_rides&.count || 0 %></p>
    </div>
    <div class="mb-2">
      <span class="text-sm text-gray-500">Completed</span>
      <p class="text-xl font-semibold text-green-600"><%= @completed_rides&.count || 0 %></p>
    </div>
    <div>
      <span class="text-sm text-gray-500">Cancelled</span>
      <p class="text-xl font-semibold text-red-600"><%= @cancelled_rides&.count || 0 %></p>
    </div>
  </div>
</div> 