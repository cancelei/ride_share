<%# Vehicle information %>
<div class="bg-white rounded-lg shadow p-6 mb-6">
  <div class="flex justify-between items-center mb-4">
    <h2 class="text-xl font-semibold">Vehicles Information</h2>
    <%= link_to new_driver_profile_vehicle_path(current_user.driver_profile),
        class: "text-sm px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-500 inline-flex items-center gap-2" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd"/>
      </svg>
      Add a Vehicle
    <% end %>
  </div>

  <div class="space-y-4">
    <% current_user.driver_profile.vehicles.each do |vehicle| %>
      <%= render "vehicles/vehicle", vehicle: vehicle, driver_profile: current_user.driver_profile %>
    <% end %>
  </div>
</div>

