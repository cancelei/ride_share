<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
  <%= turbo_stream_from "user_#{current_user.id}_rides" %>
  
  <%# Profile Section - Left Sidebar %>
  <div class="lg:col-span-1">
    <div class="bg-white rounded-lg shadow p-6 mb-6">
      <h2 class="text-xl font-semibold mb-4">User Information</h2>
      <div class="space-y-4">
        <p><strong>Name:</strong> <%= current_user.full_name %></p>
        <p><strong>Email:</strong> <%= current_user.email %></p>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="text-xl font-semibold mb-4">Passenger Profile</h2>
        <% if @passenger_profile %>
          <div class="space-y-4">
            <p><strong>WhatsApp:</strong> <%= @passenger_profile.whatsapp_number %></p>
            <p><strong>Telegram:</strong> <%= @passenger_profile.telegram_username %></p>
            <%= link_to "Edit Profile", edit_passenger_profile_path(@passenger_profile),
                class: "inline-block mt-4 px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-500" %>
          </div>
        <% else %>
          <%= link_to "Create Passenger Profile", new_passenger_profile_path,
              class: "inline-block px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-500" %>
        <% end %>
    </div>
  </div>

  <%# Bookings Section - Right Content %>
  <div class="lg:col-span-2">
    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex justify-between items-center mb-6">
        <h2 class="text-xl font-semibold">My Rides</h2>
        <%= link_to new_ride_path,
            class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-500 flex items-center gap-2" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd"/>
          </svg>
          <span>Book a Ride</span>
        <% end %>
      </div>

      <%# Tabs Navigation %>
      <div class="border-b border-gray-200 mb-6 overflow-x-auto">
        <%= turbo_frame_tag "tab_state" do %>
          <input type="hidden" id="current_tab" value="<%= params[:type] || 'active' %>" />
        <% end %>
        
        <nav class="flex flex-nowrap min-w-full sm:min-w-0 sm:flex-wrap" aria-label="Tabs">
          <% active_tab = params[:type] || 'active' %>
          
          <%= link_to passenger_rides_path(type: "active"),
              id: "active_tab",
              class: "whitespace-nowrap px-4 py-3 text-sm font-medium rounded-t-lg relative #{active_tab == 'active' ? 'bg-blue-600 text-white' : 'text-gray-700 hover:text-gray-900 hover:bg-gray-100'}",
              data: { 
                turbo_frame: "rides_content",
                turbo_action: "advance"
              } do %>
            <span class="flex items-center gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                <path d="M8 16.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0zM15 16.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0z"/>
                <path fill-rule="evenodd" d="M3 4a1 1 0 00-1 1v10a1 1 0 001 1h12.5a1 1 0 001-1V5a1 1 0 00-1-1H3zm4 3.5a1 1 0 10-2 0 1 1 0 002 0zm2 0a1 1 0 11-2 0 1 1 0 012 0zm2 0a1 1 0 10-2 0 1 1 0 002 0z" clip-rule="evenodd"/>
              </svg>
              <span>Active</span>
            </span>
          <% end %>

          <%= link_to passenger_rides_path(type: "history"),
              id: "history_tab",
              class: "whitespace-nowrap px-4 py-3 text-sm font-medium rounded-t-lg relative #{active_tab == 'history' ? 'bg-blue-600 text-white' : 'text-gray-700 hover:text-gray-900 hover:bg-gray-100'}",
              data: { 
                turbo_frame: "rides_content",
                turbo_action: "advance"
              } do %>
            <span class="flex items-center gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM4.332 8.027a6.012 6.012 0 011.912-2.303C6.512 5.73 6.974 6 7.5 6A1.5 1.5 0 019 7.5V8a2 2 0 004 0 2 2 0 011.523-1.943A5.981 5.981 0 0116 10c0 .34-.028.675-.083 1H15a2 2 0 00-2 2v2.197A5.973 5.973 0 0110 16v-2a2 2 0 00-2-2 2 2 0 01-2-2 2 2 0 00-1.668-1.973z" clip-rule="evenodd"/>
              </svg>
              <span>History</span>
            </span>
          <% end %>
        </nav>
      </div>

      <%= turbo_frame_tag "rides_content" do %>
        <% rides = case params[:type]
           when 'history'
             @my_rides.where(status: [:completed, :cancelled])
           else
             @my_rides.where(status: [:pending, :accepted, :in_progress])
           end %>
        <!-- Debug info -->
        <% if Rails.env.development? %>
          <div class="bg-yellow-100 p-2 mb-4 text-xs">
            <p>Debug: current_user present? <%= current_user.present? %></p>
            <p>Debug: current_user role: <%= current_user&.role %></p>
            <p>Debug: current_user passenger profile? <%= current_user&.passenger_profile.present? %></p>
            <p>Debug: rides count: <%= rides.count %></p>
            <% rides.each do |ride| %>
              <p>Debug: ride <%= ride.id %> status: <%= ride.status %></p>
            <% end %>
          </div>
        <% end %>
        
        <div class="space-y-4">
        <% if rides.present? %>
            <% rides.each do |ride| %>
              <%= render "rides/ride_card", ride: ride, current_user: current_user %>
            <% end %>
          <% else %>
            <div class="col-span-full text-center py-12">
              <svg xmlns="http://www.w3.org/2000/svg" class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"/>
              </svg>
              <h3 class="mt-2 text-sm font-medium text-gray-900">No <%= params[:type] == 'history' ? 'past' : 'active' %> rides</h3>
              <p class="mt-1 text-sm text-gray-500">Get started by booking a new ride.</p>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%# Partial for booking card to be rendered %>
<%# Create a new partial: app/views/bookings/_booking_card.html.erb %>

<%= javascript_tag do %>
  document.addEventListener('turbo:load', function() {
    const currentTabElement = document.getElementById('current_tab');
    if (!currentTabElement) return;
    
    const currentTab = currentTabElement.value;
    
    // Reset all tabs
    document.querySelectorAll('#active_tab, #history_tab').forEach(tab => {
      tab.classList.remove('bg-blue-600', 'text-white');
      tab.classList.add('text-gray-700');
    });
    
    // Set active tab
    const activeTabElement = document.getElementById(currentTab + '_tab');
    if (activeTabElement) {
      activeTabElement.classList.add('bg-blue-600', 'text-white');
      activeTabElement.classList.remove('text-gray-700');
    } else {
      // Default to active tab if no match
      const defaultTab = document.getElementById('active_tab');
      if (defaultTab) {
        defaultTab.classList.add('bg-blue-600', 'text-white');
        defaultTab.classList.remove('text-gray-700');
      }
    }
  });
<% end %>