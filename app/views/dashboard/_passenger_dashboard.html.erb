<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
  <div class="bg-white rounded-lg shadow p-6">
    <h2 class="text-xl font-semibold mb-4">Passenger Profile</h2>
    <% if @passenger_profile %>
      <div class="space-y-4">
        <p><strong>WhatsApp:</strong> <%= @passenger_profile.whatsapp_number %></p>
        <p><strong>Telegram:</strong> <%= @passenger_profile.telegram_username %></p>
        <%= link_to "Edit Profile", edit_passenger_profile_path(@passenger_profile), 
            class: "inline-block mt-4 px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-500" %>
      </div>
    <% else %>
      <%= link_to "Create Passenger Profile", new_passenger_profile_path, 
          class: "inline-block px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-500" %>
    <% end %>
  </div>

  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex justify-between items-center mb-4">
      <h2 class="text-xl font-semibold">Recent Bookings</h2>
      <%= link_to "Book a Ride", new_booking_path, 
          class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-500" %>
    </div>
    
    <% if @my_bookings.any? %>
      <div class="space-y-4">
        <% @my_bookings.each do |booking| %>
          <div class="border-b pb-4">
            <p><strong>Status:</strong> <%= booking.status.titleize %></p>
            <p><strong>Scheduled Time:</strong> <%= booking.scheduled_time&.strftime("%A, %B %d, %Y at %I:%M %p") %></p>
            <p><strong>From:</strong> <%= booking.pickup %></p>
            <p><strong>To:</strong> <%= booking.dropoff %></p>
            <p><strong>Distance:</strong> <%= booking.distance_km %> km</p>
            <p><strong>Estimated Duration:</strong> <%= booking.estimated_duration_minutes %> minutes</p>
            <p><strong>Total Travel Duration:</strong> <%= booking.total_travel_duration_minutes %> minutes</p>
            <%= link_to "View Details", booking_path(booking), 
                class: "mt-2 inline-block px-3 py-1 bg-blue-600 text-white rounded-md hover:bg-blue-500" %>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-500">No bookings yet</p>
    <% end %>
  </div>
</div> 