<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
  <%# Profile Section - Left Sidebar %>
  <div class="lg:col-span-1">
    <div class="bg-white rounded-lg shadow p-6 mb-6">
      <h2 class="text-xl font-semibold mb-4">User Information</h2>
      <div class="space-y-4">
        <p><strong>Name:</strong> <%= current_user.full_name %></p>
        <p><strong>Email:</strong> <%= current_user.email %></p>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="text-xl font-semibold mb-4">Passenger Profile</h2>
        <% if @passenger_profile %>
          <div class="space-y-4">
            <p><strong>WhatsApp:</strong> <%= @passenger_profile.whatsapp_number %></p>
            <p><strong>Telegram:</strong> <%= @passenger_profile.telegram_username %></p>
            <%= link_to "Edit Profile", edit_passenger_profile_path(@passenger_profile), 
                class: "inline-block mt-4 px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-500" %>
          </div>
        <% else %>
          <%= link_to "Create Passenger Profile", new_passenger_profile_path, 
              class: "inline-block px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-500" %>
        <% end %>
    </div>
  </div>

  <%# Bookings Section - Right Content %>
  <div class="lg:col-span-2">
    <div class="bg-white rounded-lg shadow p-6">
      <div class="flex justify-between items-center mb-6">
        <h2 class="text-xl font-semibold">My Rides</h2>
        <%= link_to new_booking_path, 
            class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-500 flex items-center gap-2" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd"/>
          </svg>
          <span>Book a Ride</span>
        <% end %>
      </div>

      <%# Tabs Navigation %>
      <div class="border-b border-gray-200 mb-6">
        <nav class="flex space-x-8" aria-label="Tabs">
          <%= link_to dashboard_rides_path(type: :active), 
              class: "px-1 py-4 text-sm font-medium #{params[:type] != 'past' ? 'text-blue-600 border-b-2 border-blue-600' : 'text-gray-500 hover:text-gray-700'}", 
              data: { turbo_frame: "rides_content" } do %>
            <span class="flex items-center gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                <path d="M8 16.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0zM15 16.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0z"/>
                <path fill-rule="evenodd" d="M3 4a1 1 0 00-1 1v10a1 1 0 001 1h12.5a1 1 0 001-1V5a1 1 0 00-1-1H3zm4 3.5a1 1 0 10-2 0 1 1 0 002 0zm2 0a1 1 0 11-2 0 1 1 0 012 0zm2 0a1 1 0 10-2 0 1 1 0 002 0z" clip-rule="evenodd"/>
              </svg>
              Active Rides
            </span>
          <% end %>
          
          <%= link_to dashboard_rides_path(type: :past), 
              class: "px-1 py-4 text-sm font-medium #{params[:type] == 'past' ? 'text-blue-600 border-b-2 border-blue-600' : 'text-gray-500 hover:text-gray-700'}", 
              data: { turbo_frame: "rides_content" } do %>
            <span class="flex items-center gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM4.332 8.027a6.012 6.012 0 011.912-2.303C6.512 5.73 6.974 6 7.5 6A1.5 1.5 0 019 7.5V8a2 2 0 004 0 2 2 0 011.523-1.943A5.981 5.981 0 0116 10c0 .34-.028.675-.083 1H15a2 2 0 00-2 2v2.197A5.973 5.973 0 0110 16v-2a2 2 0 00-2-2 2 2 0 01-2-2 2 2 0 00-1.668-1.973z" clip-rule="evenodd"/>
              </svg>
              Past Rides
            </span>
          <% end %>
        </nav>
      </div>

      <%= turbo_frame_tag "rides_content" do %>
        <% bookings = params[:type] == 'past' ? @my_bookings.past : @my_bookings.active %>
        <div class="grid gap-6 <%= bookings.any? ? 'md:grid-cols-2' : '' %>">
        <% if bookings.any? %>
            <% bookings.each do |booking| %>
              <div class="bg-white rounded-lg shadow p-6 space-y-4">
                <div class="flex justify-between items-start">
                  <div class="space-y-2">
                    <h3 class="font-semibold text-lg">
                      <%= booking.pickup %> â†’ <%= booking.dropoff %>
                    </h3>
                    <p class="text-gray-600 text-sm">
                      <%= booking.scheduled_time&.strftime("%b %d, %Y at %I:%M %p") %>
                    </p>
                  </div>
                  <span class="px-3 py-1 text-sm rounded-full <%= booking_status_color(booking.status) %>">
                    <%= booking.status.titleize %>
                  </span>
                </div>

                <div class="grid grid-cols-2 gap-4 text-sm">
                  <div class="space-y-1">
                    <p class="text-gray-600">Distance</p>
                    <p class="font-medium"><%= booking.distance_km %> km</p>
                  </div>
                  <div class="space-y-1">
                    <p class="text-gray-600">Duration</p>
                    <p class="font-medium"><%= booking.estimated_duration_minutes %> min</p>
                  </div>
                  <div class="space-y-1">
                    <p class="text-gray-600">Seats</p>
                    <p class="font-medium"><%= booking.requested_seats %></p>
                  </div>
                  <div class="space-y-1">
                    <p class="text-gray-600">Price</p>
                    <p class="font-medium"><%= number_to_currency(booking.distance_km * 2) %></p>
                  </div>
                </div>

                <% if booking.ride %>
                  <div class="pt-4 border-t border-gray-200">
                    <h4 class="text-sm font-semibold text-gray-900 mb-2">Driver Details</h4>
                    <div class="flex items-center gap-4">
                      <div class="flex-1">
                        <p class="text-sm"><%= booking.ride.driver.user.full_name %></p>
                        <p class="text-sm text-gray-600">
                          <%= "#{booking.ride.vehicle&.brand} #{booking.ride.vehicle&.model} (#{booking.ride.vehicle&.color})" %>
                        </p>
                      </div>
                      <%= link_to "View Ride", ride_path(booking.ride), 
                          class: "px-3 py-1.5 text-sm bg-gray-100 hover:bg-gray-200 rounded-md" %>
                    </div>
                  </div>
                <% end %>

                <div class="flex items-center justify-end gap-2 pt-4">
                  <%= link_to "Details", booking_path(booking),
                      class: "px-3 py-1.5 text-sm bg-blue-600 hover:bg-blue-500 text-white rounded-md" %>
                  <% if booking.pending? %>
                    <%= link_to "Cancel", booking_path(booking), 
                        data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                        class: "px-3 py-1.5 text-sm bg-red-600 hover:bg-red-500 text-white rounded-md" %>
                  <% end %>
                </div>
              </div>
            <% end %>
          <% else %>
            <div class="col-span-full text-center py-12">
              <svg xmlns="http://www.w3.org/2000/svg" class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"/>
              </svg>
              <h3 class="mt-2 text-sm font-medium text-gray-900">No <%= params[:type] == 'past' ? 'past' : 'active' %> rides</h3>
              <p class="mt-1 text-sm text-gray-500">Get started by booking a new ride.</p>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

