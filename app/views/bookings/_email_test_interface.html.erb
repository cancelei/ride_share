<% if Rails.env.development? %>
  <div class="bg-gray-100 p-4 rounded-lg mt-4">
    <h3 class="text-lg font-semibold mb-2">Test Emails</h3>
    <div class="space-y-2">
      <%= link_to "Test Booking Confirmation", 
          test_email_path('confirmation'),
          class: "block px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600" %>
      
      <%= link_to "Test Ride Accepted", 
          test_email_path('accepted'),
          class: "block px-4 py-2 bg-green-500 text-white rounded hover:bg-green-600" %>
      
      <%= link_to "Test Driver Arrived", 
          test_email_path('arrived'),
          class: "block px-4 py-2 bg-yellow-500 text-white rounded hover:bg-yellow-600" %>
      
      <%= link_to "Test Ride Completion (Passenger)", 
          test_email_path('completion_passenger'),
          class: "block px-4 py-2 bg-purple-500 text-white rounded hover:bg-purple-600" %>
      
      <%= link_to "Test Ride Completion (Driver)", 
          test_email_path('completion_driver'),
          class: "block px-4 py-2 bg-indigo-500 text-white rounded hover:bg-indigo-600" %>
      
      <%= link_to "View All Emails", 
          '/letter_opener',
          target: '_blank',
          class: "block px-4 py-2 bg-gray-500 text-white rounded hover:bg-gray-600" %>
    </div>
  </div>
<% end %> 