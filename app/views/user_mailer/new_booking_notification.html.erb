<div style="font-family: sans-serif; max-width: 600px; margin: 0 auto;">
  <h1>New Ride Request Available!</h1>
  
  <div style="background: #f3f4f6; padding: 20px; border-radius: 8px; margin: 20px 0;">
    <h2 style="margin-top: 0;">New Booking Details</h2>
    <p><strong>From:</strong> <%= @booking.pickup %></p>
    <p><strong>To:</strong> <%= @booking.dropoff %></p>
    <p><strong>Scheduled Time:</strong> <%= @booking.scheduled_time.strftime("%B %d, %Y at %I:%M %p") %></p>
    <p><strong>Passenger:</strong> <%= @booking.passenger.user.full_name %></p>
    <p><strong>Distance:</strong> <%= @booking.distance_km %> km</p>
    <p><strong>Estimated Price:</strong> <%= @booking.formatted_price %></p>
  </div>

  <% if @pending_bookings.any? %>
    <div style="background: #eef2ff; padding: 20px; border-radius: 8px; margin: 20px 0;">
      <h2 style="margin-top: 0;">Other Pending Bookings</h2>
      
      <% @pending_bookings.each do |pending_booking| %>
        <div style="border-bottom: 1px solid #cbd5e1; padding: 10px 0; margin-bottom: 10px;">
          <p><strong>From:</strong> <%= pending_booking.pickup %></p>
          <p><strong>To:</strong> <%= pending_booking.dropoff %></p>
          <p><strong>Scheduled:</strong> <%= pending_booking.scheduled_time.strftime("%B %d, %Y at %I:%M %p") %></p>
          <p><strong>Passenger:</strong> <%= pending_booking.passenger.user.full_name %></p>
        </div>
      <% end %>
    </div>
  <% end %>

  <div style="text-align: center; margin-top: 20px;">
    <%= link_to "View Dashboard", 
        dashboard_url,
        style: "display: inline-block; background: #2563eb; color: white; padding: 12px 24px; text-decoration: none; border-radius: 6px;" %>
  </div>
</div> 