<%= form_with(url: start_ride_path(ride), method: :post, class: "mt-4") do |form| %>
  <div class="flex items-center gap-2">
    <%= form.text_field :security_code,
        class: "block rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500",
        placeholder: "Enter 4-digit code",
        maxlength: 4,
        required: true %>
    <%= form.submit "Verify & Start Ride",
        class: "rounded-md bg-blue-600 px-3.5 py-2.5 text-sm font-semibold text-white hover:bg-blue-500" %>
  </div>
<% end %> 