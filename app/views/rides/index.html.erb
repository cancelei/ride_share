<% content_for :title, "Rides" %>

<div class="w-full space-y-8">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Rides</h1>
    <%= link_to "New ride", new_ride_path, 
        class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div id="active-rides" class="space-y-6">
    <h2 class="text-2xl font-semibold border-b pb-2">Active Rides</h2>
    
    <% if @active_rides.any? %>
      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        <% @active_rides.each do |ride| %>
          <div class="bg-white rounded-lg shadow p-6 space-y-4">
            <div class="flex justify-between items-start">
              <div>
                <h3 class="font-semibold text-lg"><%= ride.title %></h3>
                <p class="text-gray-600"><%= ride.start_time %></p>
              </div>
              <span class="px-2 py-1 text-sm rounded-full <%= ride.status_color %>">
                <%= ride.status %>
              </span>
            </div>
            
            <div class="space-y-2">
              <p class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-500" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
                </svg>
                <%= ride.location %>
              </p>
              <p class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-500" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
                </svg>
                <%= pluralize(ride.participants_count, 'participant') %>
              </p>
            </div>

            <div class="flex gap-2 pt-2">
              <%= link_to "View details", ride, 
                  class: "flex-1 text-center rounded-md px-3.5 py-2 bg-gray-100 hover:bg-gray-50 font-medium" %>
              <%= link_to "Join ride", join_ride_path(ride), 
                  class: "flex-1 text-center rounded-md px-3.5 py-2 bg-blue-600 hover:bg-blue-500 text-white font-medium",
                  data: { turbo_method: :post } if ride.can_join?(current_user) %>
              
              <% if ride.bookings.any? %>
                <%= link_to ride.google_maps_url, 
                    target: "_blank",
                    rel: "noopener noreferrer",
                    class: "flex-1 text-center items-center justify-center gap-2 rounded-md px-3.5 py-2 bg-green-600 hover:bg-green-500 text-white font-medium" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="inline-block h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
                  </svg>
                  Open in Maps
                <% end %>
              <% else %>
                <span class="text-sm text-gray-500">No bookings yet</span>
              <% end %>
            </div>

            <% if ride.bookings.any? %>
              <div class="mt-2 text-sm text-gray-500">
                <p>Bookings count: <%= ride.bookings.count %></p>
                <% if ride.bookings.first %>
                  <p>First booking pickup: <%= ride.bookings.first.pickup %></p>
                  <p>First booking dropoff: <%= ride.bookings.first.dropoff %></p>
                <% end %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-center py-8 text-gray-500">No active rides at the moment.</p>
    <% end %>
  </div>

  <div id="past-rides" class="space-y-6">
    <h2 class="text-2xl font-semibold border-b pb-2">Past Rides</h2>
    
    <% if @past_rides.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Title</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Location</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Participants</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @past_rides.each do |ride| %>
              <tr>
                <td class="px-6 py-4 whitespace-nowrap"><%= ride.title %></td>
                <td class="px-6 py-4 whitespace-nowrap"><%= ride.start_time %></td>
                <td class="px-6 py-4 whitespace-nowrap"><%= ride.location %></td>
                <td class="px-6 py-4 whitespace-nowrap"><%= ride.participants_count %></td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="px-2 py-1 text-sm rounded-full <%= ride.status_color %>">
                    <%= ride.status %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <%= link_to "View", ride, 
                      class: "text-blue-600 hover:text-blue-900" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p class="text-center py-8 text-gray-500">No past rides found.</p>
    <% end %>
  </div>
</div>
