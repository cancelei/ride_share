<section class="py-16 bg-white">
  <div class="container mx-auto px-4">
    <div class="grid md:grid-cols-2 gap-12 items-start">
      <!-- Left Column - Logo and Social -->
      <div class="space-y-8">
        <%= link_to root_path, class: "inline-block" do %>
          <%= image_tag "Group 2184.png" %>
        <% end %>

        <div class="space-y-4">
          <p class="text-gray-600">Connect with us on social media</p>
          <div class="flex space-x-4">
            <%= link_to "#", class: "text-gray-600 hover:text-blue-600 transition-colors" do %>
              <i class="fab fa-twitter text-2xl"></i>
            <% end %>
            <%= link_to "#", class: "text-gray-600 hover:text-blue-600 transition-colors" do %>
              <i class="fab fa-facebook text-2xl"></i>
            <% end %>
            <%= link_to "#", class: "text-gray-600 hover:text-blue-600 transition-colors" do %>
              <i class="fab fa-instagram text-2xl"></i>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Right Column - Link Grid -->
      <div class="grid grid-cols-3 gap-8">
        <!-- Company -->
        <div class="space-y-4">
          <h3 class="font-semibold text-lg">Company</h3>
          <div class="space-y-2">
            <%= link_to "Work With Us", "#", class: "block text-gray-600 hover:text-gray-900" %>
            <%= link_to "About Us", "#", class: "block text-gray-600 hover:text-gray-900" %>
            <%= link_to "Our Work", "#", class: "block text-gray-600 hover:text-gray-900" %>
          </div>
        </div>

        <!-- Support -->
        <div class="space-y-4">
          <h3 class="font-semibold text-lg">Support</h3>
          <div class="space-y-2">
            <%= link_to "Advertise With Us", "#", class: "block text-gray-600 hover:text-gray-900" %>
            <%= link_to "FAQs", "#", class: "block text-gray-600 hover:text-gray-900" %>
            <%= link_to "Our Commitment", "#", class: "block text-gray-600 hover:text-gray-900" %>
          </div>
        </div>

        <!-- Contact -->
        <div class="space-y-4">
          <h3 class="font-semibold text-lg">Contact</h3>
          <div class="space-y-2">
            <%= link_to "Support Us", "#", class: "block text-gray-600 hover:text-gray-900" %>
            <%= link_to "Report a Bug", "#", class: "block text-gray-600 hover:text-gray-900" %>
            <%= link_to "Contact Us", "#", class: "block text-gray-600 hover:text-gray-900" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section> 