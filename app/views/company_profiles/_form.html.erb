<%= form_with(model: company_profile, class: "contents") do |form| %>
  <% if company_profile.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(company_profile.errors.count, "error") %> prohibited this company_profile from being saved:</h2>

      <ul class="list-disc ml-6">
        <% company_profile.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": company_profile.errors[:name].none?, "border-red-400 focus:outline-red-600": company_profile.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :description %>
    <%= form.text_field :description, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": company_profile.errors[:description].none?, "border-red-400 focus:outline-red-600": company_profile.errors[:description].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :whatsapp_number %>
    <%= form.text_field :whatsapp_number, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": company_profile.errors[:whatsapp_number].none?, "border-red-400 focus:outline-red-600": company_profile.errors[:whatsapp_number].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :telegram_number %>
    <%= form.text_field :telegram_number, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": company_profile.errors[:telegram_number].none?, "border-red-400 focus:outline-red-600": company_profile.errors[:telegram_number].any?}] %>
  </div>

  <%= form.hidden_field :user_id, value: current_user.id %>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
