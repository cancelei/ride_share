<div class="mt-4 pt-4 border-t border-gray-200">
  <div class="grid grid-cols-2 gap-4">
    <div class="flex items-center gap-2">
      <span class="text-gray-600">Color:</span>
      <span class="font-medium"><%= vehicle.color %></span>
    </div>
    
    <div class="flex items-center gap-2">
      <span class="text-gray-600">Year:</span>
      <span class="font-medium"><%= vehicle.built_year %></span>
    </div>
    
    <div class="flex items-center gap-2">
      <span class="text-gray-600">Fuel Average:</span>
      <span class="font-medium"><%= vehicle.fuel_avg %></span>
    </div>
    
    <div class="flex items-center gap-2">
      <span class="text-gray-600">Insurance:</span>
      <span class="font-medium"><%= vehicle.has_private_insurance ? "Private Insurance" : "No Private Insurance" %></span>
    </div>
  </div>
</div> 